+        return null;
+    }
+}
+
+function clearTokens() {
+    localStorage.removeItem(STORAGE_KEY);
+}
+
+async function refreshAccessToken() {
+    const tokens = loadTokens();
+    if (!tokens?.refresh) {
+        return false;
+    }
+
+    try {
+        const response = await fetch(`${API_BASE_URL}/accounts/auth/jwt/refresh/`, {
