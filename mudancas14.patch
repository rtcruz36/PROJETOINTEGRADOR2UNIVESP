+        return apiFetch(path, options, { allowEmpty, retryOn401: false });
+    }
+
+    if (response.status === 204 && allowEmpty) {
+        return null;
+    }
+
+    const data = await safeJson(response);
+
+    if (!response.ok) {
+        const detail = data?.detail || 'Erro ao carregar dados.';
+        throw new Error(detail);
+    }
+
+    return data;
