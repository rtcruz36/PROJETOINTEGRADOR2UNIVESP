 .modal {
     position: fixed;
     inset: 0;
     background: rgba(15, 23, 42, 0.55);
     display: grid;
     place-items: center;
     padding: 2rem;
     z-index: 20;
 }
 
 .modal[aria-hidden="true"] {
     display: none;
 }
 
 .modal__content {
     background: white;
     border-radius: 1.5rem;
     padding: 2rem;
     width: min(520px, 100%);
     display: grid;
     gap: 1.5rem;
     position: relative;
     box-shadow: 0 30px 50px -25px rgba(15, 23, 42, 0.45);
 }
 
