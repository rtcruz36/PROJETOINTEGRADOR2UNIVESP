+    color: var(--text-muted);
+    min-height: 1.2rem;
+}
+
+.course-detail-feedback[data-status='success'] {
+    color: var(--success);
+}
+
+.course-detail-feedback[data-status='error'] {
+    color: var(--danger);
+}
+
+.course-detail-feedback[data-status='loading'] {
+    color: var(--primary-dark);
+}
+
+.course-placeholder {
+    color: var(--text-muted);
+    font-size: 0.95rem;
+}
+
+.course-quizzes-list {
+    list-style: none;
+    display: flex;
+    flex-direction: column;
+    gap: 0.85rem;
+}
+
+.course-quiz-item {
+    padding: 1rem 1.2rem;
+    border-radius: 14px;
+    background: var(--surface-alt);
+    border: 1px solid rgba(76, 110, 245, 0.12);
+}
+
+.course-quiz-item h4 {
+    font-size: 1.05rem;
+    margin-bottom: 0.35rem;
+}
+
+.course-quiz-item p {
+    color: var(--text-muted);
+    font-size: 0.9rem;
+}
+
+.course-statistics-grid {
+    display: grid;
+    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
+    gap: 1rem;
+}
+
+.course-stat-card {
+    padding: 1.1rem;
+    border-radius: 16px;
+    background: var(--surface-alt);
+    border: 1px solid rgba(76, 110, 245, 0.12);
+    display: flex;
+    flex-direction: column;
+    gap: 0.35rem;
+}
+
+.course-stat-card span {
+    font-size: 0.85rem;
+    color: var(--text-muted);
+}
+
+.course-stat-card strong {
+    font-size: 1.4rem;
+    font-weight: 700;
+}
+
 .primary-button--small {
     padding: 0.65rem 1rem;
