 }
 
 .modal-overlay {
     position: fixed;
     inset: 0;
     display: grid;
     place-items: center;
     background: rgba(15, 23, 42, 0.55);
     backdrop-filter: blur(6px);
     padding: 1.5rem;
     z-index: 30;
 }
 
 .modal-overlay[hidden] {
     display: none;
 }
 
 .modal-card {
     width: min(460px, 95vw);
     display: flex;
     flex-direction: column;
     gap: 1rem;
