+    const password = formData.get('password');
+
+    try {
+        const response = await fetch(`${API_BASE_URL}/accounts/auth/jwt/create/`, {
+            method: 'POST',
+            headers: {
+                'Content-Type': 'application/json',
+            },
+            body: JSON.stringify({ email, password }),
