+
+        await loadChatEnvironment();
+        hideLogin();
+    } catch (error) {
+        console.error('Erro de login:', error);
+        selectors.loginError.textContent = error.message || 'Erro inesperado ao entrar.';
+    }
+}
+
+function handleLogout() {
