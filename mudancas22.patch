+:root {
+    --chat-user: var(--primary);
+    --chat-assistant: var(--primary-dark);
+    --chat-background: var(--surface-alt);
+}
+
+.studybot-layout {
+    display: grid;
+    grid-template-columns: minmax(260px, 360px) 1fr;
+    gap: 1.5rem;
+    padding: 1.5rem;
+}
+
+.focus-field {
+    display: flex;
+    flex-direction: column;
+    gap: 0.4rem;
+    font-size: 0.9rem;
+}
+
+.focus-select,
+.focus-field select,
+.focus-field textarea,
+.focus-field input {
+    border: 1px solid var(--border);
+    border-radius: 0.75rem;
+    padding: 0.65rem 0.75rem;
+    background: var(--surface-alt);
+    color: var(--text-primary);
+    font-family: inherit;
+}
+
+.focus-field textarea {
+    resize: vertical;
+}
+
+.context-panel {
+    display: flex;
+    flex-direction: column;
+    gap: 1.25rem;
+}
+
+.context-selector {
+    display: flex;
+    flex-direction: column;
+    gap: 0.75rem;
+}
+
+.context-summary h3 {
+    font-size: 1.15rem;
+    margin-bottom: 0.25rem;
+}
+
+.context-course,
+.context-subtopics {
+    color: var(--muted);
+    margin-bottom: 0.25rem;
+}
+
+.context-plan {
+    background: var(--surface-alt);
+    border-radius: 0.75rem;
+    padding: 1rem;
+    display: flex;
+    flex-direction: column;
+    gap: 0.5rem;
+}
+
+.context-plan h3 {
+    font-size: 1rem;
+    font-weight: 600;
+}
+
+.context-plan__text {
+    line-height: 1.5;
+    white-space: pre-line;
+}
+
+.form-feedback {
+    font-size: 0.85rem;
+    color: var(--muted);
+}
+
+.form-feedback[data-status='error'] {
+    color: var(--danger);
+}
+
+.form-feedback[data-status='success'] {
+    color: var(--success);
+}
+
+.form-feedback[data-status='loading'] {
+    color: var(--warning);
+}
+
+.form-feedback[data-status='info'] {
+    color: var(--primary-dark);
+}
+
+.chat-panel {
+    display: flex;
+    flex-direction: column;
+    gap: 1rem;
+}
+
+.quick-suggestions {
+    display: flex;
+    flex-wrap: wrap;
+    gap: 0.5rem;
+}
+
+.quick-suggestion {
+    border: 1px solid var(--surface-alt);
+    border-radius: 999px;
+    background: transparent;
+    color: var(--primary-dark);
+    font-size: 0.85rem;
+    font-weight: 500;
+    padding: 0.5rem 0.9rem;
+    transition: background 0.2s ease, border-color 0.2s ease;
+}
+
+.quick-suggestion:hover,
+.quick-suggestion:focus {
+    background: var(--surface-alt);
+    border-color: var(--primary);
+}
+
+.chat-messages {
+    flex: 1;
+    overflow-y: auto;
+    border: 1px solid var(--surface-alt);
+    border-radius: 1rem;
+    padding: 1rem;
+    display: flex;
+    flex-direction: column;
+    gap: 0.75rem;
+    background: var(--background);
+    min-height: 320px;
+}
+
+.chat-message {
+    background: var(--chat-background);
+    border-radius: 0.9rem;
+    padding: 0.75rem 0.9rem;
+    display: flex;
+    flex-direction: column;
+    gap: 0.25rem;
+}
+
+.chat-message--user {
+    align-self: flex-end;
+    background: rgba(66, 133, 244, 0.12);
+}
+
+.chat-message--assistant {
+    align-self: flex-start;
+    background: rgba(15, 157, 88, 0.12);
+}
+
+.chat-message-header {
+    display: flex;
+    gap: 0.5rem;
+    align-items: baseline;
+    font-size: 0.75rem;
+    font-weight: 600;
+    color: var(--muted);
+}
+
+.chat-content {
+    font-size: 0.95rem;
+    line-height: 1.5;
+}
+
+.chat-form {
+    display: flex;
+    flex-direction: column;
+    gap: 0.75rem;
+}
+
+.chat-actions {
+    display: flex;
+    align-items: center;
+    justify-content: space-between;
+    gap: 1rem;
+}
+
+.chat-status[data-status='loading'] {
+    color: var(--warning);
+}
+
+.chat-status[data-status='error'] {
+    color: var(--danger);
+}
+
+.chat-status[data-status='success'] {
+    color: var(--success);
+}
+
+.chat-hint {
+    font-size: 0.8rem;
+    color: var(--muted);
+    margin-top: -0.5rem;
+}
+
+@media (max-width: 1024px) {
+    .studybot-layout {
+        grid-template-columns: 1fr;
+    }
+
+    .context-panel {
+        order: 2;
+    }
+
+    .chat-panel {
+        order: 1;
+    }
+}
+
+@media (max-width: 640px) {
+    .studybot-layout {
+        padding: 1rem;
+    }
+
+    .chat-actions {
+        flex-direction: column;
+        align-items: flex-start;
+    }
+
+    .chat-actions button {
+        align-self: stretch;
+    }
+}
